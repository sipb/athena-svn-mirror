%    \begin{macrocode}
  \ifdim\topmargin<.5truein \topmargin.5truein \fi
%    \end{macrocode}
%    Now subtract the default margin provided by standard DVI
%    drivers.
%    \begin{macrocode}
  \advance\topmargin -1truein\relax

%    \begin{macrocode}
  \topmargin\paperheight \advance\topmargin -\textheight
  \advance\topmargin -\headheight \advance\topmargin -\headsep
%    \end{macrocode}
%    Height of running foot ignored: not present.
%    \begin{macrocode}
  \divide\topmargin\tw@
%    \end{macrocode}

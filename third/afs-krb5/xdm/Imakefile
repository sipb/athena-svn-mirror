KRB5_DEFINES=-DKRB5LOGIN -DAFSPAG -DPOSIX_SIGNALS=1 -DPOSIX_SETJMP=1 -DAKLOG_PATH=\"/usr/krb5/bin/aklog\" $(SIGNAL_DEFINES) -DNRL -DIRIX_CAPABILITY

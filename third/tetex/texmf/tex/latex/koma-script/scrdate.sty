\def\@dayname#1{%
  \begingroup%
    \@tempcnta #1%
    \ifcase\@tempcnta%
      Monday\or Tuesday\or Wednesday\or Thursday\or
      Friday\or Saturday\or Sunday\fi\endgroup%
}
